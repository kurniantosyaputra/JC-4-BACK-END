  <html lang="en">
    <head>
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
      <style>
      .gaya1{
        margin-top: 5px;  
        float:left;  
        box-shadow:0 0 3px #aaa; 
        height:auto;color:#666;
      }
      .gaya2{
        width: 100%;  
        padding:10px;
        float:left; 
        background:#1ca8dd; 
        color:#fff; 
        font-size:30px; 
        text-align:center;
      }
      .gaya3{
        width:100%; padding:0px 0px;border-bottom:1px solid rgba(0,0,0,0.2);float:left;
      }
      .gaya4{
        width:30%; float:left;padding:10px;
      }
      .gaya5{
        font-size:14px;float:left; width:100%;
      }
      .gaya6{
        width:100%;float:left;background:#efefef;
      }
      h4{
        color: rgb(255, 255, 255);
        font-size: 30px
      }
      a{
        color: rgb(214, 0, 0);
      }
      .top{
        margin-top: 20px;
      }
      </style>          
    </head>
    <body>
      <form action="/tambahinvoice" method="POST">
       <div class="container top">
          
         <a class="btn btn-success" href="/home">Lanjut Belanja</a>
        <div class="gaya1">
            <div class="gaya2">
             Keranjang Belanja
            </div>
             <div class="gaya3">
                <div class="gaya4">                
                     <span class="gaya5">
                         <input type="text" name="namapenerima" placeholder="Nama Penerima" > <br>
                     </span><br>
                     <span class="gaya5">
                        <br> <input type="text" name="alamatpenerima" placeholder="Alamat Penerima">
                     </span>
                     <span class="gaya5">
                      <br> <input type="int" name="nomorhp" placeholder="Nomor Hp">
                   </span>
                </div>
            </div>
            <div class="gaya6">
                    <table class="table table-striped style4">
                            <thead class="thead-dark style1">
                                <th>Nama Produk</th>
                                <th>Ukuran</th>
                                <th>Warna </th>
                                <th>Qty</th>
                                <th>Harga </th>
                                <th>Total Harga</th>
                                <th>Aksi</th>
                            </thead>
                            <% keranjang.forEach( x => { %> 
                            <tbody>
                                <td> <%= x.nama_produk %> </td>
                                <td> <%= x.ukuran %> </td>
                                <td> <%= x.warna %></td>
                                <td> <input type="number" name="kuantias" value="<%= x.qty %>"/></td>
                                <td> <%= x.harga %></td>
                                <td> <%= x.total_harga %></td>
                                <td><a class="btn btn-success" href="/carthapus/<%= x.id %>">Hapus </a> 
                                 <a class="btn btn-success" href="/editcart/<%= x.id %>">Perbarui</a></button></td>
                            </tbody>
                            <% }) %> 
                        </table>    
            </div>
                      <div style="width:100%;float:left; background:rgb(195, 195, 195);">
                  <span style="font-weight:600;width:40%;color:#666;text-align:center;">
                    <% var a = 0 %>
                    <% for (i=0 ; i < keranjang.length ; i++) { %>
                        <% a = (keranjang[i].total_harga + a) %>
                    <% } %>
                    <h4>Total Belanja : Rp.<%= a %></h4> <br>
                    <input name="grandtotal" value="<%= a %>" hidden />
                 </span>
               </div>
               <center>
               <button class="btn btn-success"  type="submit" style="margin-top:10px;margin-bottom:10px;">Check Out</button>
                </center>
              </div>
            </form> 
              
    </div>
    
</body>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
