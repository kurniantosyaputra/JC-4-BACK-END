<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"> -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <title>React App</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"> -->
    <style>
        .gaya{
            width: 99%;
            background-color: rgb(242, 240, 240);
            margin-top: 30px;
            margin-right: 10px;
        }
        .jenis{
            color: brown;
        }
        .jenis2{
            margin-top: 10px;
            margin : auto 0;
            color: brown;
        }
        .jenis3{
            margin-top: 40px;
        }
        .jenis4{
         text-align: right 
        }
        li{
            list-style: none;
        }
        .gaya1{
            
            background-color: navajowhite;
            width: 50px;
            border: 0rem;
            text-align: center
        }
        .list-group{
            display: inline;
            list-style-type: circle;
        }
        .li{
            list-style: none;
            display: inline;
            padding: 10px;
            margin-right: 20px;
        }
    </style>
  </head>
   
  
    <body>
        <div class="container">   
            <h4><% include ../partial/header.ejs%></h4> 
            <div class="row ">
                <div class="col-md-3 gaya">
                <form action="/cart" method="POST">    
                <ul>    
                    <li> nama kategori  : <%= detailproduk[0].kategori %> </li>
                    <li> jenis kategori :<%= detailproduk[0].jenis_kategori %> </li>
                    <li> nama produk : <%= detailproduk[0].nama_produk %> </li>
                </ul>    
                <input type="int" value="<%= detailproduk[0].harga %>" name="harga" hidden>
                <ul>
                    <% warna.forEach (x => { %>
                     <li class="li"><a href="/detail/<%= detailproduk[0].id %>?warnaid=<%= x.id %>"><%= x.warna %></a></li>       
                    <% }) %>  
                </ul>         
                    <% if (typeof size !== 'undefined') {
                        size.forEach(x => { %>
                        <input <%= x.stok === 0 ? 'disabled' : null %> type="radio" name="idproduk" value="<%= x.id %>"> Ukuran <%= x.ukuran %> & Stok <%= x.stok === 0 ? 'SOLD OUT' : x.stok %></input><br>
                    <%  })
                    } %>
                <input type="number" name="jumlahbeli" placeholder="Jumlah Beli">    
                <button class="btn btn-success" type="submit">+ CART </button>    
                </form>     
                </div>          
            </div>    
        </div>
    </body>  
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

